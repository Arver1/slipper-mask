  "homepage": "https://github.com/Arver1/slipper-mask#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.18.2",
    "@babel/polyfill": "^7.4.4",
